<!DOCTYPE html>
<html>
    <head>
        {% block meta %}
            <meta charset="utf-8">
            <title>{% block title %}{% if title %}{{title}}{% else %}Мои проекты{% endif %}{% endblock %}</title>
            <link rel="stylesheet" href="/Static/default/css/style.css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="shortcut icon" href="/Static/default/favicon.ico">

            <script type="text/javascript"src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="header">
                <a href="/" id="logo" title="На главную">TODO</a>
                <span class="right">
                    {% if user.id == 0 %}
                        <a href="/register/">Регистрация</a> / <a href="/authorize/">Авторизация</a>
                    {% else %}
                        <a href="/exit/">Выход</a>
                    {% endif %}
                    {% block complete %}
                        <a href="/task/view/complete/0/" title="Выполненные задания"><i class="fa fa-check"></i></a>
                    {% endblock %}


                </span>
            </div>
        </header>
        <div id="container">
            <nav>
                <ul>
                    <li><a href="/view/today/{{id_activePproject}}/">Сегодня</a></li>
                    <li><a href="/view/week/{{id_activePproject}}/">Неделя</a></li>
                    <li><a href="/view/month/{{id_activePproject}}/">Месяц</a></li>
                </ul>
                <ul>
                    {% for project in projects %}
                        <li class="{% if project.id == id_activePproject %}active{% endif %}">
                            <a href="/project/{{project.id}}/"><span class="color_project {{project.color}}"></span> {{project.title}}</a>
                            {% if user.id %}
                                <span id="menu{{project.id}}" data-action="action{{project.id}}" class="menu_action"><i class="fa fa-ellipsis-v"></i></span>
                                <ul class="display_none" id="action{{project.id}}">
                                    <li><a href="/project/edit/{{project.id}}/">Изменить</a></li>
                                    <li><a href="/project/delete/{{project.id}}/">Удалить</a></li>
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
                {% if user.id %}
                    <div>
                        <ul id="Project">
                            <li><a href="#" class="btn">Добавить проект</a></li>
                        </ul>
                        <form class="form" id="formProject" action="/project/new/" method="post">
                            <!-- <span id="typeProject"><input class="typeProject" type="text" name="typeProject" value="" disabled></span> -->
                            <span id="typeProject"></span>
                            <input type="hidden" name="color" value="red">
                            <input type="text" name="title" value="" placeholder="Название проекта" pattern="^[А-ЯA-Za-zа-яЁё0-9]{3,32}$"><br>
                            <input type="submit" name="add" value="Добавить">
                            <a href="#" class="cancel">Отменить</a>
                        </form>
                    </div>
                {% endif %}
            </nav>
            <div class="container">
                <div class="messages">
                    {% for error in errors %}
                        <div class="error">
                            {{error}}
                        </div>
                    {% endfor %}
                    {% for message in messages %}
                        <div class="message">
                            {{message}}
                        </div>
                    {% endfor %}
                </div>

                {% block header_title %}
                    <div class="header_title">
                        <h1>{{block('title')}}</h1>
                    </div>
                {% endblock %}
                <div class="content">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        <footer>
            &copy; by Sanek_OS9<span>@mail.ru</span>
        </footer>
        <script src="/Static/default/js/test.js" charset="utf-8"></script>
    </body>
</html>
